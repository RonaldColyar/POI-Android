<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#0F2027">

    <TextView
        android:id="@+id/firstLabel"
        android:layout_width="126dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:text="First"
        android:textColor="#fff"
        android:textSize="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/PersonsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastLabel"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_marginBottom="4dp"
        android:text="Last"
        android:textColor="#fff"
        android:textSize="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/PersonsImage"
        app:layout_constraintTop_toBottomOf="@+id/firstLabel"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/PersonsImage"
        android:layout_width="167dp"
        android:layout_height="111dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/defaultimage" />

    <ImageView
        android:id="@+id/deletePerson"
        android:layout_width="68dp"
        android:layout_height="87dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/firstLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>