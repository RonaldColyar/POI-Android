<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EntryView"
    android:layout_width="match_parent"
    android:layout_height="700dp">

    <TextView
        android:id="@+id/EntryViewFirst"
        android:layout_width="174dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="First"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/personEntryViewImage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/personEntryViewImage"
        app:layout_constraintTop_toBottomOf="@+id/personEntryViewImage" />

    <TextView
        android:id="@+id/EntryViewLast"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Last"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/EntryViewList"
        app:layout_constraintEnd_toEndOf="@+id/EntryViewFirst"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/EntryViewFirst"
        app:layout_constraintTop_toBottomOf="@+id/EntryViewFirst"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/EntryViewList"
        android:layout_width="411dp"
        android:layout_height="419dp"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/personEntryViewImage"
        android:layout_width="268dp"
        android:layout_height="166dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/defaultimage" />

    <ImageView
        android:id="@+id/morepersonactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toEndOf="@+id/personEntryViewImage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_more_vert_24" />

</androidx.constraintlayout.widget.ConstraintLayout>