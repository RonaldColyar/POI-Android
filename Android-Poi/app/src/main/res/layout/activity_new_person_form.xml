<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".new_person_form">

    <EditText
        android:id="@+id/firstEntry"
        android:layout_width="293dp"
        android:layout_height="87dp"
        android:layout_marginTop="12dp"
        android:background="#03A9F4"
        android:ems="10"
        android:hint="First"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/lastEntry"
        android:layout_width="293dp"
        android:layout_height="87dp"
        android:layout_marginTop="12dp"
        android:background="#03A9F4"
        android:ems="10"
        android:hint="Last"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstEntry" />

    <EditText
        android:id="@+id/locationEntry"
        android:layout_width="293dp"
        android:layout_height="87dp"
        android:layout_marginTop="12dp"
        android:background="#03A9F4"
        android:ems="10"
        android:hint="Location"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastEntry" />

    <EditText
        android:id="@+id/raceEntry"
        android:layout_width="293dp"
        android:layout_height="87dp"
        android:layout_marginTop="16dp"
        android:background="#03A9F4"
        android:ems="10"
        android:hint="Race"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationEntry" />

    <EditText
        android:id="@+id/heightEntry"
        android:layout_width="288dp"
        android:layout_height="87dp"
        android:layout_marginTop="16dp"
        android:background="#03A9F4"
        android:ems="10"
        android:hint="Height"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raceEntry" />

    <Button
        android:id="@+id/create_person_button"
        android:layout_width="291dp"
        android:layout_height="93dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="#111"
        android:text="Create"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightEntry"
        app:layout_constraintVertical_bias="0.686" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="134dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        android:text=">/>/>"
        android:textColor="#03A9F4"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/SelectImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_photo_camera_24" />

</androidx.constraintlayout.widget.ConstraintLayout>